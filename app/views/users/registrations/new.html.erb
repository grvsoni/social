<h2>Register</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="alert alert-error">
  	<%= devise_error_messages! %>
  </div>

  <div class="span2"><%= f.label :first_name %></div>
  <div class="span6"><%= f.text_field :first_name %></div>
  <div class="clear"></div>
  <div class="span2"><%= f.label :last_name %></div>
  <div class="span6"><%= f.text_field :last_name %></div>
  <div class="clear"></div>
  <div class="span2"><%= f.label :gender %></div>
  <div class="span6">
  <%= f.radio_button :gender, "male" %> Male
  <%= f.radio_button :gender, "female" %> Female
  </div>
  <div class="clear"></div>
  <div class="span2"><%= f.label :email %></div>
  <div class="span6"><%= f.email_field :email %></div>
  <div class="clear"></div>
  <div class="span2"><%= f.label :password %></div>
  <div class="span6"><%= f.password_field :password %></div>
  <div class="clear"></div>
  <div class="span2"><%= f.label :password_confirmation %></div>
  <div class="span6"><%= f.password_field :password_confirmation %></div>
  <div class="clear"></div>
  <div class="span2">&nbsp;</div>
  <div class="span6"><%= f.submit "Register" %></div>
<% end %>
<div class="clear"></div>
<div class="span2">&nbsp;</div>
<div class="span6">
  <%= render "devise/shared/links" %>
</div
